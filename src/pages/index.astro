<style>
	.coleccion{
	position: absolute;
	width: 300px;
	height: 100px;
	top: 0;
	left: 50%;
	background: linear-gradient(180deg, rgb(0, 0, 0) 0%, rgba(38,38,38,0.99) 46%, rgba(82,82,82,1) 100%);

	}
	/* article{
	position: absolute;
	width: 300px;
	height: 100px;
	top: 0;
	left: 50%;
	background: linear-gradient(180deg, rgb(0, 0, 0) 0%, rgba(38,38,38,0.99) 46%, rgba(82,82,82,1) 100%);

	} */

	.hero{
    height: 100vh; 
	}
	hero p {
		letter-spacing: 3px;
	}

	.circle {
	position: absolute;
    width: 1700px;
    height: 1400px; 
    background-color: #000; 
    border-radius:50%;
    top: -700px; 
    left: 50px;
	z-index: -10;
	}

	.zapatilla-hero{
	position: absolute;
	top: 0;
	left: 40%;
	width: 40rem;
	animation: img .7s ease-in both;
	}

	@keyframes img {
		from{
			transform: translateX(150px);
			opacity: 0;
		}
		to{opacity: 1;
			transform: translateX(0);
		}
	}

	.zapatilla{
	position: absolute;
	top: 13%;
	left: 50%;
	background: linear-gradient(0deg, rgb(0, 0, 0) 0%, rgba(38,38,38,0.99) 46%, rgba(82,82,82,1) 100%);
	height: 500px;
	width: 300px;
	z-index: -5;
	}

	.pago{
		position: relative;
	}
	.pago::after{
		content: "";
		display: block;
		background-image: url(../../public/pago.png);
		background-size: cover; 
  		background-repeat: no-repeat;
		width: 4rem;
		height: 4rem;
		position: absolute;
		top: 0;
		left: 60%;
	}
	
	main{
		position: relative;
	}
	.card_comprar{
		background-color: #a67d5c;
		width: 70rem;
		height: 20rem;
		border-radius: 10px;
	}

	.comprar_zapatilla{
		position: absolute;
		top: 0;
		left: 30%;
		width: 900px;
	}

</style>
